<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_movie"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardCornerRadius="8dp"
        android:background="@color/bg_movie"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/bg_movie"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_top1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/biz_movie_ic_launcher" />


            <ImageView
                android:id="@+id/iv_top2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/biz_movie_ic_launcher" />


            <ImageView
                android:id="@+id/iv_top4"
                android:layout_width="30dp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dp"
                android:src="@mipmap/biz_movie_ic_hat" />

            <TextView
                android:textColor="@color/text_movie"
                android:gravity="center"
                android:textSize="50sp"
                android:background="@color/bg_movie"
                android:paddingTop="10dp"
                android:text="漫威电影宇宙"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_top5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/biz_movie_line" />

            <TextView
                android:textColor="@color/text_movie"
                android:gravity="center"
                android:textSize="14sp"
                android:background="@color/bg_movie"
                android:text="Marvel Cinematic Universe Ordered By Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_top6"
                android:layout_width="30dp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dp"
                android:src="@mipmap/biz_movie_ic_hat" />

            <ImageView
                android:id="@+id/iv_top3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/biz_movie_ic_launcher" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>
