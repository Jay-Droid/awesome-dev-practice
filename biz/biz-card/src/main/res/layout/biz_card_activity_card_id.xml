<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".id.CardIdActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="正式身份证"
                android:textSize="44sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@mipmap/id_card_bg_front" />

                <TextView
                    android:id="@+id/tv_label_name"
                    style="@style/card_label"
                    android:layout_marginTop="40dp"
                    android:text="姓   名" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/card_text"
                    android:layout_alignBottom="@+id/tv_label_name"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/tv_label_name"
                    android:text="王雪洁"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tv_label_gender"
                    style="@style/card_label"
                    android:layout_below="@+id/tv_label_name"
                    android:text="姓   别" />

                <TextView
                    android:id="@+id/tv_gender"
                    style="@style/card_text"
                    android:layout_alignBaseline="@+id/tv_label_gender"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/tv_label_gender"
                    android:text="男" />

                <TextView
                    android:id="@+id/tv_label_birth"
                    style="@style/card_label"
                    android:layout_below="@+id/tv_label_gender"
                    android:text="出   生" />

                <TextView
                    android:id="@+id/tv_birth"
                    style="@style/card_text"
                    android:layout_alignBaseline="@+id/tv_label_birth"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/tv_label_birth"
                    android:text="1979" />


                <TextView
                    android:id="@+id/tv_label_birth_year"
                    style="@style/card_label"
                    android:layout_below="@+id/tv_label_gender"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_birth"
                    android:text="年" />


                <TextView
                    android:id="@+id/tv_birth_month"
                    style="@style/card_text"
                    android:layout_alignBaseline="@+id/tv_label_birth_year"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_label_birth_year"
                    android:text="10" />

                <TextView
                    android:id="@+id/tv_label_birth_month"
                    style="@style/card_label"
                    android:layout_below="@+id/tv_label_gender"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_birth_month"
                    android:text="月" />

                <TextView
                    android:id="@+id/tv_birth_day"
                    style="@style/card_text"
                    android:layout_alignBaseline="@+id/tv_label_birth_month"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_label_birth_month"
                    android:text="1" />

                <TextView
                    android:id="@+id/tv_label_birth_day"
                    style="@style/card_label"
                    android:layout_below="@+id/tv_label_gender"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_birth_day"
                    android:text="日" />


                <TextView
                    android:id="@+id/tv_label_address"
                    style="@style/card_label"
                    android:layout_below="@+id/tv_label_birth"
                    android:text="住   址" />


                <TextView
                    android:id="@+id/tv_address"
                    style="@style/card_text"
                    android:layout_alignBaseline="@+id/tv_label_address"
                    android:layout_marginStart="14dp"
                    android:paddingEnd="20dp"
                    android:layout_toStartOf="@+id/iv_photo"
                    android:layout_toEndOf="@+id/tv_label_address"
                    android:text="山东省莘县观城镇大柳树村549号" />


                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="110dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/id_id_photo"
                    android:layout_alignTop="@+id/ll_id"
                    android:layout_marginTop="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="50dp"
                    android:layout_height="120dp"/>

                <LinearLayout
                    android:id="@+id/ll_id"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/tv_label_id"
                        style="@style/card_label"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:text="公民身份证号码   " />

                    <TextView
                        android:id="@+id/tv_id"
                        style="@style/card_text"
                        android:lineSpacingExtra="10dp"
                        android:text="460032197910193621" />

                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/id_card_bg_back" />


                 <ImageView
                     android:id="@+id/iv_emblem"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="50dp"
                     android:layout_marginStart="50dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_emblem" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:gravity="center_horizontal"
                    android:layout_toEndOf="@+id/iv_emblem"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true">

                    <TextView
                        style="@style/card_text"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:textSize="26sp"
                        android:text="中华人民共和国" />

                    <TextView
                        style="@style/card_text"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="10dp"
                        android:textSize="36sp"
                        android:text="居民身份证" />

                </LinearLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/tv_sign"
                        style="@style/card_text"
                        android:layout_marginStart="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:text="签发机关    杭州市万塘分局" />

                    <TextView
                        style="@style/card_text"
                        android:layout_marginStart="0dp"
                        android:layout_below="@+id/tv_sign"
                        android:layout_alignStart="@+id/tv_sign"
                        android:layout_marginTop="10dp"
                        android:text="有效期限    2020.01.01 - 2040.01.01" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="临时身份证"
                android:textSize="44sp"
                android:textStyle="bold" />

            <ImageView
                android:src="@mipmap/ic_id_temprory"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="500dp"/>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>